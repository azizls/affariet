{% extends 'front.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
{% if reservation.idEvent.affiche is not null %}
    <div style="text-align:center;">
        <img src="{{ asset('uploads/event_images/' ~ reservation.idEvent.affiche) }}" alt="{{ reservation.idEvent.nomEvent }}" style="max-width: 100%; max-height: 400px;"/>
    </div>
    <br>
{% endif %}

<h1 style="text-align:center;">{{ reservation.idEvent.nomEvent }}</h1>

<table class="table" style="margin:auto;">
    <tbody>
        <tr>
            <th>Nom de l'événement</th>
            <td>{{ reservation.idEvent.nomEvent }}</td>
        </tr>
        <tr>
            <th>Emplacement</th>
            <td>{{ reservation.idEvent.emplacement }}</td>
        </tr>
        <tr>
            <th>Date de début</th>
            <td>{{ reservation.idEvent.dateDebut ? reservation.idEvent.dateDebut|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Date de fin</th>
            <td>{{ reservation.idEvent.dateFin ? reservation.idEvent.dateFin|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ reservation.idEvent.descriptionEvent }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ reservation.idEvent.prix }}</td>
        </tr>
        <tr>
            <th>Date de la réservation</th>
            <td>{{ reservation.dateRes ? reservation.dateRes|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<br>

<div style="text-align:center;">
    <a href="{{ path('app_reservation_front_index') }}" class="btn btn-primary">Retour à la liste</a>
    <a href="{{ path('app_reservation_front_delete', {'id': reservation.idRes}) }}">Delete reservation</a>
</div>

{% endblock %}
