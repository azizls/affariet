
    {% extends 'front.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Ajouter un nouveau produit priv√©</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Nom du produit') }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.description, 'Description') }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.image, 'Image (JPG, PNG or GIF file)') }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
                                {{ form_errors(form.image) }}
                            </div>
                            <button type="submit" class="btn btn-primary py-2 px-4">{{ form_label(form.save, 'Enregistrer') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


    


